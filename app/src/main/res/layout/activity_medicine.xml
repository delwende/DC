                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="exénatide (Byetta, Bydureon)
liraglutide (Victoza)
dulaglutide (Trulicity)
lixisénatide (Adlyxine)
sémaglutide (Ozempic)"
